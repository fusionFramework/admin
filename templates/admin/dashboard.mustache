<div class="row">
	<div class="col-lg-8">
		<div class="box">
			<header>
				<h5>Updates</h5>
			</header>
			<div class="body" id="trigo" style="height: 250px;">
				{{#news.list}}
				<div class="panel panel-info">
					<div class="panel-heading"><small class="pull-right">{{date}}</small>{{title}}</div>
					<div class="panel-body">
						{{&body}}
					</div>
				</div>
				{{/news.list}}
				{{^news.list}}
				<p class="text-center text-danger"><i>News source down</i></p>
				{{/news.list}}
			</div>
		</div>
	</div>
	<div class="col-lg-4">
		<div class="box">
			<header>
				<h5>Quick stats</h5>
				<div class="toolbar">
					<button class="btn btn-default btn-line btn-sm nolink" title="These results are cached every 5 minutes"><i class="fa fa-question-circle"></i></button>
				</div>
			</header>
			<div class="body">
				<div class="panel-group" id="accordion">
					{{#stats}}
					<div class="panel panel-default">
						<div class="panel-heading">
							<h4 class="panel-title">
								<a data-toggle="collapse" data-parent="#accordion" href="#{{id}}">
									<i class="{{icon}}"></i> {{title}}
								</a>
							</h4>
						</div>
						<div id="{{id}}" class="panel-collapse collapse">
							<table class="table table-condensed table-hover">
								<tbody>
								{{#items}}
								<tr>
									<td>{{title}}</td>
									<td>{{value}}</td>
								</tr>
								{{/items}}
								</tbody>
							</table>
						</div>
					</div>
					{{/stats}}
				</div>
			</div>
		</div>
	</div>
</div>
	</div>
<hr>