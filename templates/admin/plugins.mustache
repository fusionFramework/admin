<div class="row">
	<div class="col-lg-offset-2 col-lg-8">
		<table class="table table-hover">
			<thead>
			<th class="col-lg-4">Name</th>
			<th class="col-lg-3">Author</th>
			<th class="col-lg-1"></th>
			<th class="col-lg-2"></th>
			<th class="col-lg-2">Action</th>
			</thead>
			{{#plugins}}
			<tr>
				<td>{{info.name}}</td>
				<td>
					<a href="{{info.author_url}}">{{info.author}}</a>
				</td>
				<td><a href="#" class="tt nolink" data-toggle="tooltip" title="{{info.description}}"><i class="fa fa-info-circle"></i></a></td>
				<td class="text-center">
					{{#installed}}
						{{#active}}
							<i class="fa fa-check-circle"></i>
						{{/active}}
						{{^active}}
							<i class="fa fa-times-circle"></i>
						{{/active}}
					{{/installed}}
					{{^installed}}
						<i class="fa fa-power-off"></i>
					{{/installed}}
				</td>
				<td>
					{{#installed}}
						<a href="{{status.link}}">{{status.text}}</a>
					{{/installed}}
					{{^installed}}
						<a href="{{install}}">install</a>
					{{/installed}}
				</td>
			</tr>
			{{/plugins}}
		</table>
	</div>
</div>